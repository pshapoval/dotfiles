" Some stuff
set nocompatible	"No compatibility
set number              "Show line numbers
set showcmd             "Show incomplete cmds down the bottom
set showmode            "Show current mode down the bottom

" Encodings
set encoding=utf-8
set fileencoding=utf-8
set fileencodings=utf-8,cp1251,cp866,koi8-r

" setting tabs
set expandtab
set shiftwidth=4
set softtabstop=4


" set autoindent
set autoindent
set smartindent

" Setting mapleader
let mapleader=","

" Text options
set colorcolumn=80
set textwidth=80

" turning off swapfiles
set noswapfile
set nobackup
set nowb
